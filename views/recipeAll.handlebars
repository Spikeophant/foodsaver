<div class="grid overflow-hidden grid-cols-3 grid-rows-none gap-2">
{{#each recipes as |recipe|}}
<div class="w-full max-w-sm bg-white rounded-lg shadow-md dark:border-emerald-700 m-5">
    <img class="p-8 rounded-t-lg" src="/images/test.jpg" alt="salad">
    <div class="px-5 pb-5">
        <div class="flex justify-between items-center">
            <span class="text-3xl font-bold text-emerald-700">{{recipe.name}}</span>
            <a href="/recipe/{{recipe.id}}" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:outline-none focus:ring-emerald-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-emerald-600/70 dark:hover:bg-emerald-500 dark:focus:ring-emerald-800">View Recipe</a>
        </div>
    </div>
</div>
{{/each}}
</div>




