<div class="row">
  <div class="col-auto">
    <h2>Welcome To Foodsaver!</h2>
    <p>Below is a recipe submited by a user</p>
  </div>
</div>
{{#each recipes as |recipe| }}
<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h3>
      <a href="/recipe/{{recipe.id}}">{{recipe.name}}</a>
    </h3>
    <p>Submited by {{recipe.user.user_name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.body}}
    </p>
  </div>
</div>
{{/each}}