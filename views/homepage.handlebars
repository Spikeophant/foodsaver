<div class="flex justify-center m-5">
  <h2 class="block text-5xl text-emerald-700 font-semibold">Welcome to FoodSaver!</h2>
</div>

<div class="flex justify-center m-5 p-3">
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <img class="w-full" src="/images/test.jpg" alt="tomatoes, carrots, zuchini in a bowl with rice">
    <div class="px-6 py-4">
      {{#each recipes as |recipe| }}
      <div class="font-bold text-xl mb-2 text-center text-emerald-500 hover:text-emerald-700">
        <a href="/recipe/{{recipe.id}}">{{recipe.name}}</a>
      </div>
      <p class="text-gray-700 text-base text-center">
        {{recipe.body}}
      </p>
      <div class="px-6 pt-4 pb-2 text-center">
        {{!-- can't get the data for recipe.user_name, future development --}}
        <span
          class="inline-block bg-emerald-600/50 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 text-center ">Submited
          by test_user_1{{recipe.user_name}}
        </span>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="flex justify-center">
  <div class="w-full max-w-md m-5">
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 new-recipe-form">
      <h3 class="block text-emerald-700 font-3xl font-bold text-center">Add Recipe</h3>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe-name">
          Name
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="recipe-name" type="text" placeholder="Quesadillas">
      </div>
      {{!-- <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe-ingredient">
          Ingredient
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="recipe-ingredient" type="text" placeholder="Chicken">
      </div> --}}
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe-desc">
          Description
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="recipe-desc" type="text" placeholder="In a large skillet, over medium-high heat...">
      </div>
      <div class="flex items-center justify-center">
        <button
          class="bg-emerald-600/80 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline new-recipe-form"
          type="submit">
          Add Recipe
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/recipe.js"></script>